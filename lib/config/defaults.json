{
  "server": {
    "host": "localhost",
    "port": 8080,
    "enableHttps": false
  },
  "db": {
    "host": "localhost",
    "port": 27017,
    "dbName": "cardgen",
    "user": "$secrets.db.user",
    "password": "$secrets.db.password"
  },
  "cardSvgCache": {
    "maxSize": 100
  },
  "log": {
    "level": "debug"
  },
  "i18n": {
    "availableLocales": ["en", "es-ES"],
    "defaultLocale": "en"
  },
  "eolApiKey": "$secrets.eolApiKey",
  "bugsnag": {
    "enable": false
  },
  "fontFamilies": [
    {
      "name": "Open Sans",
      "dirname": "opensans"
    }
  ],
  "appTemplateVersions": {
    "localTest": {
      "trait": "1.0",
      "title": "1.0",
      "key": "1.0",
      "desc": "1.0",
      "vocab": "1.0"
    }
  }
}
